<!-- Method Documentation URL: https://developer.salesforce.com/docs/atlas.en-us.api_asynch.meta/api_asynch/binary_create_batch.htm -->
<template name="uploadBatchFile" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="jobId" description="ID of the job to attach batch file."/>
    <sequence>
        <property name="uri.var.callEndpointUri" expression="fn:concat($ctx:uri.var.apiUrl,'/job/',$func:jobId,'/batch')"/>
        <property name="httpMethod" value="post"/>
        <salesforcebulk.callWithRetry/>
    </sequence>
</template>